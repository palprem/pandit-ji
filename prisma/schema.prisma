generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  user_id      Int       @id @default(autoincrement())
  first_name   String
  last_name    String
  email_id     String    @unique(map: "User_email_id_key")
  phone_number String    @unique(map: "User_phone_number_key")
  password     String
  role         user_role @default(USER)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime @default(now())
}

model bookings{
  id      Int       @id @default(autoincrement())
  name   String
  email    String
  phone     String
  message     String
  date     String
  type     String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime @default(now())
}

enum user_role {
  USER
  ADMIN
}
